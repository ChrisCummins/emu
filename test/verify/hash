set -ex
test_setup

source=source

# Push a snapshot
emu init
mkdir $source
emu sink add origin $source
emu push
hash=$(ls $source/.emu/nodes)

# Verify snapshot
emu verify origin:$hash

# Break snapshot and test verify failure
touch $source/Latest/a
if emu verify origin:$hash ; then
    echo "should have failed!"
    exit 5
else
    echo "good"
fi

test_teardown
