set -ex
test_setup

source=source

# Push a snapshot
emu init
mkdir $source
emu sink add origin $source
emu push
hash=$(ls $source/.emu/nodes)

# Verify snapshot
emu verify origin:$hash

# Break snapshot and test verify failure
touch $source/.emu/trees/$hash/a
if emu verify origin:$hash ; then
    echo "ok"
else
    exit 5
fi

test_teardown
