set -ex
test_setup

source=source

# Push a snapshot
emu init
mkdir $source
emu sink add origin $source
emu push
hash=$(ls $source/.emu/nodes)

# Verify snapshot
emu verify origin:$hash

# Break snapshot and test verify failure
touch $source/.emu/trees/$hash/a
set +e
emu verify origin:$hash
if ! (( $? ))
then
    exit $EXIT_ASSERT_FAIL
fi

test_teardown
