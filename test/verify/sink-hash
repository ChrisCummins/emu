set -ex
test_setup

source=source
name=origin

# Push a snapshot
emu init
mkdir $source
emu sink add $name $source
emu push
hash=$(ls $source/.emu/nodes)

# Verify snapshot
emu verify $name:$hash

# Break snapshot and test verify failure
touch $source/.emu/trees/$hash/a
if emu verify $name:$hash ; then
    echo "should have failed!"
    exit 5
else
    echo "good"
fi

test_teardown
