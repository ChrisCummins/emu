set -eux
test_setup

lock=.emu/LOCK
sink=../sink

emu init
echo -e "$(date) $$" > $lock
assert_is_file $lock

set +e
emu clean --dry-run
set -e
assert_is_file $lock

set +e
emu clean
set -e
assert_is_not_file $lock

mkdir -pv $sink
emu sink add origin $sink

echo -e "$(date) $$" > $sink/$lock
assert_is_file $sink/$lock

set +e
emu clean
set -e
assert_is_file $sink/$lock

set +e
emu clean --dry-run --recursive
set -e
assert_is_file $sink/$lock

set +e
emu clean --recursive
set -e
assert_is_not_file $sink/$lock

test_teardown
