set -ex
test_setup

stack=../stack
link=$stack/broken-link

emu init
mkdir -pv $stack
emu stack add origin $stack

ln -s /broken/file/path $link
assert_is_broken_link "$link"

set +e
emu clean --dry-run --recursive > tmp
set -e
assert_is_broken_link "$link"
grep $link tmp

set +e
emu clean --recursive
set -e
assert_does_not_exist "$link"

test_teardown
