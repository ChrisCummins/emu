set -e
test_setup
source /usr/local/lib/libemu

cd /tmp/emu/test-source

emu init -v

assert_is_not_file .emu/LOCK
lock_dir
assert_is_file .emu/LOCK
assert_file_is_not_empty .emu/LOCK
unlock_dir
assert_is_not_file .emu/LOCK

cd ../
lock_dir test-source
assert_is_file test-source/.emu/LOCK
assert_file_is_not_empty test-source/.emu/LOCK
unlock_dir test-source
assert_is_not_file test-source/.emu/LOCK

test_teardown
