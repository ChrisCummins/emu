set -eu
test_setup

cd $EMU_TEST_DIR/test-source
emu init -v

emu sink -v add origin ../test-sink
emu sink -v add test ../test-sink2

emu snapshot -v

emu log > $EMU_TEST_DIR/log
emu log origin > $EMU_TEST_DIR/log-origin
emu log test > $EMU_TEST_DIR/log-test

sleep 1
emu snapshot -v

if [[ "$(wc -l $EMU_TEST_DIR/log | awk '{ print $1 }')" -lt "$(wc -l "$EMU_TEST_DIR"/log-origin | awk '{ print $1 }')" ]]
then
    echo "Log test failed!"
    echo "emu log:"
    cat $EMU_TEST_DIR/log
    echo "emu log origin:"
    cat $EMU_TEST_DIR/log-origin
    exit 5
fi

if [[ "$(wc -l $EMU_TEST_DIR/log | awk '{ print $1 }')" -lt "$(wc -l "$EMU_TEST_DIR"/log-test | awk '{ print $1 }')" ]]
then
    echo "Log test failed!"
    echo "emu log:"
    cat $EMU_TEST_DIR/log
    echo "emu log origin:"
    cat $EMU_TEST_DIR/log-test
    exit 5
fi

test_teardown
