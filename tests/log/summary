set -eu
test_setup

cd $EMU_TEST_DIR/test-source
emu init -v

emu sink -v add origin ../test-sink

emu push -v

emu log > $EMU_TEST_DIR/log
emu log -s > $EMU_TEST_DIR/log-summary

if [[ "$(wc -l $EMU_TEST_DIR/log | awk '{ print $1 }')" -lt "$(wc -l "$EMU_TEST_DIR"/log-summary | awk '{ print $1 }')" ]]
then
    echo "Summary test failed!"
    echo "emu log:"
    cat $EMU_TEST_DIR/log
    echo "emu log -s:"
    cat $EMU_TEST_DIR/log-summary
    exit 5
fi

if [[ "$(wc -l $EMU_TEST_DIR/log-summary | awk '{ print $1 }')" -ne 2 ]]
then
    echo "Summary test failed!"
    echo "emu log:"
    cat $EMU_TEST_DIR/log-summary
    exit 5
fi

sleep 1
emu push -v
emu log -s > $EMU_TEST_DIR/log-summary
if [[ "$(wc -l $EMU_TEST_DIR/log-summary | awk '{ print $1 }')" -ne 3 ]]
then
    echo "Summary test failed!"
    echo "emu log:"
    cat $EMU_TEST_DIR/log-summary
    exit 5
fi

test_teardown
